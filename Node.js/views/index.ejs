<!DOCTYPE html>

<html>

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/topPanel.ejs") %> 
    <%- include("./partials/leftPanel.ejs") %> 
    <%- include("./partials/rightPanel.ejs") %> 

    <div id="main">
        <% if(articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <div class="article-boxes">
                    <a class="article-item" href="/articles/<%= article.id %>">
                        <div class="article-box">
                            <img src="<%= article.image %>" alt="Zdjęcie artykułu" width="150px" height="150px">
                        </div>
                        <div class="article-box">
                            <h3 class="title"><%= article.title %></h3>
                            <p class="introduction"><%= article.introduction %> </p>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p>Nie ma artykułów</p>
        <% } %>
    </div>

    <%- include("./partials/footer.ejs") %> 
    
</body>

</html>
